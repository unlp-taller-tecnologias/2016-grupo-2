{% extends 'Admin/layout.html.twig' %}

{% block main %}
    <h1>Mi perfil</h1>
    <div class="well well-lg">
            <div class="col-md-6">
                <h3>Nombre</h3>
                <p>{{ app.user.personal.nombre }}</p>

                <h3>Apellido</h3>
                <p>{{ app.user.personal.apellido }}</p>

                <h3>GÃ©nero</h3>
                <p>{{ app.user.personal.genero }}</p>
            </div>
             <div class="col-md-6">
                 <h3>DNI</h3>
                 <p>{{ app.user.personal.dni }}</p>

                 <h3>Edad</h3>
                 <p>{{ app.user.personal.edad }}</p>

                 <h3>Rol</h3>
                 <p>{{ app.user.personal.rol.nombre }}</p>
             </div>

            <div class="col-md-12">
            <h3>Servicios</h3>
            {% if app.user.personal.servicios is not empty %}
                {% for servicio in app.user.personal.servicios %}
                 <b>{{servicio.tipo}}</b><p>{{servicio.descripcion}}</p>
                {% endfor %}
            {% else %}
                <p><i>Usuario sin servicios asociados.</i></p>
            {% endif %}
            </div>
        <a href="{{ path('personal_edit', { 'id': app.user.personal.id }) }}" class="btn btn-warning"> <i class="fa fa-pencil" aria-hidden="true"></i>
            Editar </a>

    </div>


{% endblock %}
