{% extends 'Admin/layout.html.twig' %}
{% block main %}
    <h1>Nuevo Personal</h1>

    {% if error is defined %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    {{ form_start(form, { 'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-group">
        {#{{ form_widget(form, { 'attr': {'class': 'form-group'}}) }}#}
    {#</div>#}
        <div class="col-12-md">
            {{ form_errors(edit_form) }}
        </div>

    <div class="form-group">
        <div class='col-sm-6'>
            {{ form_row(form.nombre) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(form.apellido) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(form.dni) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(form.edad) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(form.genero) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(form.servicios) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(form.rol) }}
        </div>
        <div class="col-md-12 espacio"></div>

        <button type="submit" class="btn btn-success col-sm-offset-10"> <i class="fa fa-check" aria-hidden="true"></i>
            Confirmar </button>
    </div>

        <div class="alert alert-info">Los campos con * son obligatorios.</div>
    {{ form_end(form) }}

    <div id="admin_rol_new_path" data-path="{{path('admin_rol_new')}}"></div>

    <table class="table table-striped">
        <tbody>
        <tr>
            <td>
                <a href="{{ path('personal_index') }}" class="btn btn-primary"> <i class="fa fa-arrow-left" aria-hidden="true"></i>
                    Volver al Listado </a>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
