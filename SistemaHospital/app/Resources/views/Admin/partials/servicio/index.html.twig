{% extends 'Admin/layout.html.twig' %}

{% block main %}
    <h1>Lista de Servicios</h1>

    <a href="{{ path('admin_servicio_new') }}" class="btn btn-success col-md-offset-10"> <i class="fa fa-plus" aria-hidden="true"></i>
         Nuevo Servicio </a>

    {% if servicios is not empty %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                
                <th>Nombre</th>
                <th>Descripción</th>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                <th>Baja</th>
                {% endif %}
                <th>Ver</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
        {% for servicio in servicios %}
            <tr>
                

                <td>{{ servicio.tipo }}</td>
                <td>{{ servicio.descripcion }}</td>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                <td>{% if servicio.baja %}Yes{% else %}No{% endif %}</td>
                {% endif %}
                <td>
                    <a href="{{ path('admin_servicio_show', { 'id': servicio.id }) }}"><i class="fa fa-info-circle" aria-hidden="true"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('admin_servicio_edit', { 'id': servicio.id }) }}"><i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <h2>¡Lo sentimos! No hay servicios cargados en el sistema.</h2>
    {% endif %}

{% endblock %}
