{% extends 'Admin/layout.html.twig' %}

{% block main %}
    <h1>Listado de Tipos de Sangre</h1>

    <a href="{{ path('Admin_sangre_new') }}" class="btn btn-success col-md-offset-10"> <i class="fa fa-plus" aria-hidden="true"></i>
        Nuevo Tipo de Sangre </a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <th>Id</th>
                {% endif %}
                <th>Nombre</th>
                <th>Ver</th>
                <th>Editar</th>
            </tr>
            </tr>
        </thead>
        <tbody>
        {% for sangre in sangres %}
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <td><a href="{{ path('Admin_sangre_show', { 'id': sangre.id }) }}">{{ sangre.id }}</a></td>
                {% endif %}
                <td>{{ sangre.nombre }}</td>
                <td>
                    <a href="{{ path('Admin_sangre_show', { 'id': sangre.id }) }}"><i class="fa fa-info-circle" aria-hidden="true"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('Admin_sangre_edit', { 'id': sangre.id }) }}"><i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
