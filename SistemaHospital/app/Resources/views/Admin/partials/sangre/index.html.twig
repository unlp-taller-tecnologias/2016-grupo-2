{% extends 'Admin/layout.html.twig' %}

{% block main %}
    {% if app.request.query.get("exito") == "delete" %}
        <div class="alert alert-success">Se ha eliminado exit√≥samente la Sangre.</div>
    {% endif %}

    <h1>Listado de Tipos de Sangre</h1>

    <a href="{{ path('Admin_sangre_new') }}" class="btn btn-primary col-md-offset-10"> <i class="fa fa-plus" aria-hidden="true"></i>
        Nuevo Tipo de Sangre </a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
               
                <th>Nombre</th>
                <th>Ver</th>
                <th>Editar</th>
            </tr>
            </tr>
        </thead>
        <tbody>
        {% for sangre in sangres %}
            <tr>
              
                <td>{{ sangre.nombre }}</td>
                <td>
                    <a href="{{ path('Admin_sangre_show', { 'id': sangre.id }) }}"><i class="fa fa-info-circle" aria-hidden="true"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('Admin_sangre_edit', { 'id': sangre.id }) }}"><i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
