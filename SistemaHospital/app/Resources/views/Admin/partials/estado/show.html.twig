{% extends 'Admin/layout.html.twig' %}

{% block main %}
    <h1>Estado de Reserva</h1>

    <table class="table table-striped table-hover">
        <tbody>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ estado.id }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Tipo</th>
                <td>{{ estado.tipo }}</td>
            </tr>
            <tr>
                <th>Descripci√≥n</th>
                <td>{{ estado.descripcion }}</td>
            </tr>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
            <tr>
                <th>Baja</th>
                <td>{% if estado.baja %}Yes{% else %}No{% endif %}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    <table class="table table-striped">
        <tbody>
        <tr>
            <td>
                <a href="{{ path('admin_estado_index') }}" class="btn btn-primary"> <i class="fa fa-arrow-left" aria-hidden="true"></i>
                    Volver al Listado </a>
            </td>
            <td>
                <a href="{{ path('admin_estado_edit', { 'id': estado.id }) }}" class="btn btn-warning"> <i class="fa fa-pencil" aria-hidden="true"></i>
                    Editar </a>
            </td>
            <td>
                {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i>
                    Eliminar </button>
                {{ form_end(delete_form) }}
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
