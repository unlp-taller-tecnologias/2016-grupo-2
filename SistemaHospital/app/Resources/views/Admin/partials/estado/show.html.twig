{% extends 'Admin/layout.html.twig' %}

{% block main %}
    <h1>Estado de Reserva</h1>

    {% if app.request.query.get("exito") == "new" %}
        <div class="alert alert-success">Se ha creado exitósamente el nuevo Estado.</div>
    {% endif %}
    {% if app.request.query.get("exito") == "edit" %}
        <div class="alert alert-success">Se ha modificado exitósamente el Estado.</div>
    {% endif %}

    <table class="table table-striped table-hover">
        <tbody>
            
            <tr>
                <th>Tipo</th>
                <td>{{ estado.tipo }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ estado.descripcion }}</td>
            </tr>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
            <tr>
                <th>Baja</th>
                <td>{% if estado.baja %}Si{% else %}No{% endif %}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    <table class="table table-striped">
        <tbody>
        <tr>
            <td>
                <a href="{{ path('admin_estado_index') }}" class="btn btn-primary"> <i class="fa fa-arrow-left" aria-hidden="true"></i>
                    Volver al Listado </a>
            </td>
            <td>
                <a href="{{ path('admin_estado_edit', { 'id': estado.id }) }}" class="btn btn-warning"> <i class="fa fa-pencil" aria-hidden="true"></i>
                    Editar </a>
            </td>
            <td>
                <button class="btn btn-danger" data-toggle="modal" data-target="#confirm-delete">
                    <i class="fa fa-trash" aria-hidden="true"></i>Eliminar
                </button>
            </td>
        </tr>
        </tbody>
    </table>

    <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="panel-heading" style="background-color: #2c3e50;">
                    <h2 class="text-center" style="color: white;">Confirmación de Eliminación</h2>
                </div>
                <div class="modal-body">
                    <h4 class="text-center">¿Está seguro que desea eliminar <b>{{ estado.tipo }}</b>?</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" style="float:left;" class="btn btn-default" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i>Cancelar </button>
                    {{ form_start(delete_form) }}
                    <button type="submit" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i>Eliminar </button>
                    {{ form_end(delete_form) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
