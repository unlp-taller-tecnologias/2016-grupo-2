{% extends 'Admin/layout.html.twig' %}

{% block main %}
    <h1>Listado de Estados de Reserva </h1>

    <a href="{{ path('admin_estado_new') }}" class="btn btn-success col-md-offset-10"> <i class="fa fa-plus" aria-hidden="true"></i>
        Nuevo Estado </a>

    {% if estados is not empty %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <th>Id</th>
                {% endif %}
                <th>Tipo</th>
                <th>Descripción</th>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                <th>Baja</th>
                {% endif %}
                <th>Ver</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
        {% for estado in estados %}
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <td><a href="{{ path('admin_estado_show', { 'id': estado.id }) }}">{{ estado.id }}</a></td>
                {% endif %}
                <td>{{ estado.tipo }}</td>
                <td>{{ estado.descripcion }}</td>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                <td>{% if estado.baja %}Yes{% else %}No{% endif %}</td>
                {% endif %}
                <td>
                    <a href="{{ path('admin_estado_show', { 'id': estado.id }) }}"><i class="fa fa-info-circle" aria-hidden="true"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('admin_estado_edit', { 'id': estado.id }) }}"><i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <h2>¡Lo sentimos! No hay estados de reserva cargados en el sistema.</h2>
{% endif %}
{% endblock %}
