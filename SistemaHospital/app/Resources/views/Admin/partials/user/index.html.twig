{% extends 'Admin/layout.html.twig' %}

{% block main %}
    <h1>Listado de Usuarios</h1>

    <a href="" class="btn btn-success col-md-offset-10"> <i class="fa fa-plus" aria-hidden="true"></i>
        Nuevo Usuario </a>

    {% if users is not empty %}
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <th>Id</th>
                {% endif %}
                <th>Nombre</th>
                <th>Ver</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <td>
                        <a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id  }}</a>
                    </td>
                {% endif %}
                <td>{{ user.username }}</td>
                <td>
                    <a href="{{ path('user_show', { 'id': user.id }) }}"><i class="fa fa-info-circle" aria-hidden="true"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('user_edit', { 'id': user.id }) }}"><i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <h2>Â¡Lo sentimos! No hay usuarios cargados en el sistema.</h2>
    {% endif %}

{% endblock %}
