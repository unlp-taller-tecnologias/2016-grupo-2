{% extends 'Admin/layout.html.twig' %}

{% block main %}
    <h1>Informaci√≥n del Usuario</h1>

    <table  class="table table-striped table-hover ">
        <tbody>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Datos Personales</th>
                {% if user.personal != null  %}
                    <td>{{ user.personal.nombre }} {{ user.personal.apellido }} </td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <table class="table table-striped">
        <tbody>
        <tr>
            <td>
                <a href="{{ path('user_index') }}" class="btn btn-primary"> <i class="fa fa-arrow-left" aria-hidden="true"></i>
                    Volver al Listado </a>
            </td>
            <td>
                <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-warning"> <i class="fa fa-pencil" aria-hidden="true"></i>
                    Editar </a>
            </td>
            <td>
                {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i>
                    Eliminar </button>
                {{ form_end(delete_form) }}
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
