{% extends 'Admin/layout.html.twig' %}

{% block main %}
    <h1>Lista de Anestesias </h1>

{% if anestesias is not empty %}
<table class="table table-striped table-hover">
        <thead>
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <th>Id</th>
                {% endif %}
                <th>Tipo</th>
                <th>Descripcion</th>
                <th>Baja</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for anestesium in anestesias %}
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <td><a href="{{ path('admin_anestesia_show', { 'id': anestesium.id }) }}">{{ anestesium.id }}</a></td>
                {% endif %}
                <td>{{ anestesium.tipo }}</td>
                <td>{{ anestesium.descripcion }}</td>
                <td>{% if anestesium.baja %}Yes{% else %}No{% endif %}</td>
                <td>
                   <a href="{{ path('admin_anestesia_show', { 'id': anestesium.id }) }}">show</a>
                </td>
                <td>
                <a href="{{ path('admin_anestesia_edit', { 'id': anestesium.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <h2>No hay anestesias incorporadas</h2>
{% endif %}
        <a href="{{ path('admin_anestesia_new') }}">Create a new anestesium</a>
{% endblock %}
