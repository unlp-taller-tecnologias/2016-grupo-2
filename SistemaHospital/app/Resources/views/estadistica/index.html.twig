{% extends 'base.html.twig' %}

{% block body %}

    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="row">
        <div class='col-sm-6'>
        {{ form_row(form.fechaIni) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(form.fechaFin) }}
        </div>
        <div class="col-md-12 espacio"></div>
        {{ form_row(form.save) }}
    </div>

    {{ form_end(form) }}

<table class="table table-striped table-hover">
<tr>
 <th>Servicio</th> 
 <th>Cirugias programadas</th>
 <th>Cirugías por guardia</th>
 <th>Cirugías con anestesia</th>
 <th>Total de cirugias</th>
</tr>
{% for servicio in servicios %}
<tr>
	<td>{{ servicio[0] }}</td>
	<td>{{ servicio[1] }}</td>
	<td>{{ servicio[2] }}</td>
	<td>{{ servicio[3] }}</td>
	<td>{{ servicio[4] }}</td>
</tr>
{% endfor %}
</table>



{% endblock %}