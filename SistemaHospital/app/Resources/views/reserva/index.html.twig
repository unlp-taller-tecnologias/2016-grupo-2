{% extends 'base.html.twig' %}

{% block body %}
    <h1>Listado de Reservas</h1>


    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="row">
        <div class='col-sm-6'>
        {{ form_row(form.fechaIni) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(form.fechaFin) }}
        </div>
        <div class="col-md-12 espacio"></div>
        {{ form_row(form.save) }}
    </div>

    {{ form_end(form) }}

    <a href="{{ path('reserva_new') }}" class="btn btn-success col-md-offset-10"> <i class="fa fa-plus" aria-hidden="true"></i>
        Nueva Reserva </a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <th>Id</th>
                {% endif %}
                <th>NÂº Reserva</th>
                <th>Servicio</th>
                <th>Paciente</th>
                <th>Estado de la reserva</th>
                <th>Baja</th>
                <th>Quirofano</th>
                <th>Fecha_inicio</th>
                <th>Fecha_fin</th>
                <th>Estado</th>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <th>Baja</th>
                {% endif %}
                <th>Fecha y Hora Inicio</th>
                <th>Fecha y Hora Fin</th>
                <th>Ver</th>
                <th>Editar</th>
                <th>Cancelar</th>
            </tr>
        </thead>
        <tbody>
        {% for reserva in reservas %}
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <td><a href="{{ path('reserva_show', { 'id': reserva.id }) }}">{{ reserva.id }}</a></td>
                {% endif %}
                <td>{{ reserva.numeroReserva }}</td>
                <td>{{ reserva.servicio.tipo }}</td>
                <td>{{ reserva.paciente.nombre }} {{ reserva.paciente.apellido }}</td>
                <td>{{ reserva.estado.tipo }}</td>
                <td>{{ reserva.quirofano.nombre }}</td>
                <td>{% if reserva.fechainicio %}{{ reserva.fechainicio|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if reserva.fechafin %}{{ reserva.fechafin|date('Y-m-d H:i:s') }}{% endif %}</td>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <td>{% if reserva.baja %}Yes{% else %}No{% endif %}</td>
                {% endif %}
                <td>{% if reserva.fechainicio %}{{ reserva.fechainicio|date('d/m/Y H:i:s') }}{% endif %}</td>
                <td>{% if reserva.fechafin %}{{ reserva.fechafin|date('d/m/Y H:i:s') }}{% endif %}</td>
                <td>
                <a href="{{ path('reserva_show', { 'id': reserva.id }) }}">show</a>
                </td>
                <td>
                <a href="{{ path('reserva_edit', { 'id': reserva.id }) }}">edit</a>
                </td>
                <td>
                    {% if reserva.estado.tipo != 'Cancelada' and reserva.estado.tipo != 'Finalizada' %}

                    <a href="{{ path('reserva_cancel', { 'id': reserva.id }) }}">cancelar</a>

                    {% endif %}

                    {% if reserva.estado.tipo == 'Pendiente' %}

                    <a href="{{ path('reserva_cancel', { 'id': reserva.id }) }}">Concluir operacion</a>

                    {% endif %}
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
