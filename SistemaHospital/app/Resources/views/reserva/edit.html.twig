{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modificar informaci√≥n de la Reserva</h1>

    {% if error is defined %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    {{ form_start(edit_form) }}

    <div class="alert alert-info">Los campos con * son obligatorios.</div>
    <div class="col-12-md">
        {{ form_errors(edit_form) }}
    </div>
    <div class="form-group">

        <div class='col-md-6'>
            {{ form_row(edit_form.fecha_inicio) }}
        </div>
        <div class='col-md-6'>
            {{ form_row(edit_form.fecha_fin) }}
        </div>
        <div class=' col-md-12'>
            {{ form_row(edit_form.estado) }}
        </div>
        <div class=' col-md-12'>
            {{ form_row(edit_form.paciente) }}
        </div>
        <div class=' col-md-12'>
            {{ form_row(edit_form.servicio) }}
        </div>
        <div class=' col-md-12'>
            {{ form_row(edit_form.quirofano) }}
        </div>
        <div class="col-md-12 espacio"></div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-success pull-right"> <i class="fa fa-check" aria-hidden="true"></i>
                Confirmar </button>
        </div>
    </div>
    {{ form_end(edit_form) }}
    <div class="col-md-12 espacio"></div>
    <table class="table table-striped">
        <tbody>
        <tr>
            <td>
                <a href="{{ path('reserva_show', { 'id': reserva.id }) }}" class="btn btn-primary">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i> Volver </a>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
