{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reserva</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reserva.id }}</td>
            </tr>
            <tr>
                <th>Numero de Reserva</th>
                <td>{{ reserva.numeroReserva }}</td>
            </tr>
            <tr>
                <th>Baja</th>
                <td>{% if reserva.baja %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha_inicio</th>
                <td>{% if reserva.fechainicio %}{{ reserva.fechainicio|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha_fin</th>
                <td>{% if reserva.fechafin %}{{ reserva.fechafin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
             <tr>
                <th>Estado</th>
                <td>{{ reserva.estado.tipo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reserva_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('reserva_edit', { 'id': reserva.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
