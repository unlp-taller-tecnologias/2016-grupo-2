{% extends 'base.html.twig' %}

{% block body %}
<h1>{{ quirofano.nombre }}</h1>
    
    {% if total > 0 %}
    <table class="table table-striped">

    
    <tr>
    <th id="turnos">Turnos para el día {{ fecha|date('d/m/Y')}} </th>
    </tr>
    {% for turno in turnos %}
       <tr>
       <td>
        Reserva numero {{ turno.numeroReserva}}  |  Horario: {{ turno.fechainicio|date('H:i:s')}} a  {{ turno.fechafin|date('H:i:s')}} hs
       </td>
       </tr>

    {% endfor %}
    </table>

    
    {% else %}

        <h3>No hay turnos registrados en el quirofano para el día {{ fecha|date('d/m/Y')}}<h3>
    {% endif %}

      <table class="table table-striped">
        <tbody>
        <tr>
            <td>
                <a href="{{ path('reserva_new') }}" class="btn btn-primary"> <i class="fa fa-arrow-left" aria-hidden="true"></i>
                    Volver a alta de reserva </a>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}