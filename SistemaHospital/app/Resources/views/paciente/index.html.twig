{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pacientes list</h1>

    <a href="{{ path('paciente_new') }}" class="btn btn-primary col-md-offset-10">Registrar nuevo paciente </a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <th>Id</th>
                {% endif %}
                <th>Mutual</th>
                <th>Baja</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Genero</th>
                <th>Dni</th>
                <th>Edad</th>
                <th>Ver</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
        {% for paciente in pacientes %}
            <tr>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <td><a href="{{ path('paciente_show', { 'id': paciente.id }) }}">{{ paciente.id }}</a></td>
                {% endif %}
                <td>{{ paciente.mutual }}</td>
                <td>{% if paciente.baja %}Yes{% else %}No{% endif %}</td>
                <td>{{ paciente.nombre }}</td>
                <td>{{ paciente.apellido }}</td>
                <td>{{ paciente.genero }}</td>
                <td>{{ paciente.dni }}</td>
                <td>{{ paciente.edad }}</td>
                <td>

                            <a href="{{ path('paciente_show', { 'id': paciente.id }) }}">show</a>
                </td>
                <td>
                            <a href="{{ path('paciente_edit', { 'id': paciente.id }) }}">edit</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
