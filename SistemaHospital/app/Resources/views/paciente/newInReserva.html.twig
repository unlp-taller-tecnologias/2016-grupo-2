{% extends 'base.html.twig' %}

{% block body %}
    <h1>Nuevo Paciente</h1>

    {% if error is defined %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    {{ form_start(form) }}
    <div class="col-12-md">
        {{ form_errors(form) }}
    </div>
    <div class="form-group">
        <div class='col-sm-6'>
            {{ form_row(form.nombre) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(form.apellido) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(form.dni) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(form.edad) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(form.genero) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(form.mutual) }}
        </div>
        <div class="col-md-12 espacio"></div>
        <button type="submit" class="btn btn-success col-sm-offset-10"> <i class="fa fa-check" aria-hidden="true"></i>
            Confirmar </button>
    </div>

    <div class="alert alert-info">Los campos con * son obligatorios.</div>
    {{ form_end(form) }}

    <table class="table table-striped">
        <tbody>
        <tr>
            <td>
                <a href="{{ path('reserva_new') }}" class="btn btn-primary"> <i class="fa fa-arrow-left" aria-hidden="true"></i>
                    Volver al Alta de Reserva </a>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
