{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modificar informaci√≥n del Paciente</h1>

    {% if error is defined %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    {{ form_start(edit_form) }}
    <div class="col-12-md">
        {{ form_errors(edit_form) }}
    </div>
    <div class="form-group">
        <input type="hidden" name="actual" value="{{ edit_form.vars.value.dni }}"/>
        <div class='col-sm-6'>
            {{ form_row(edit_form.nombre) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(edit_form.apellido) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(edit_form.dni) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(edit_form.edad) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(edit_form.genero) }}
        </div>
        <div class='col-sm-6'>
            {{ form_row(edit_form.mutual) }}
        </div>
        <div class="col-md-12 espacio"></div>
        <button type="submit" class="btn btn-success col-sm-offset-10"> <i class="fa fa-check" aria-hidden="true"></i>
            Confirmar </button>
    </div>

    <div class="alert alert-info">Los campos con * son obligatorios.</div>
    {{ form_end(edit_form) }}

    <table class="table table-striped">
        <tbody>
        <tr>
            <td>
                <a href="{{ path('paciente_show', { 'id': paciente.id }) }}" class="btn btn-primary">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i> Volver </a>
            </td>
        </tr>
        </tbody>
    </table>

{% endblock %}
