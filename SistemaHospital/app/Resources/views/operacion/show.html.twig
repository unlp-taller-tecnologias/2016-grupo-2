{% extends 'base.html.twig' %}

{% block body %}
    <h1>Operacion</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ operacion.id }}</td>
            </tr>
            <tr>
                <th>Diagnostico</th>
                <td>{{ operacion.diagnostico }}</td>
            </tr>
            <tr>
                <th>Habitacion</th>
                <td>{{ operacion.habitacion }}</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>{{ operacion.observaciones }}</td>
            </tr>
            <tr>
                <th>Internado</th>
                <td>{% if operacion.internado %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Tq</th>
                <td>{{ operacion.tq|date('H:i') }}hs </td>
            </tr>
            <tr>
                <th>Baja</th>
                <td>{% if operacion.baja %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('operacion_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('operacion_edit', { 'id': operacion.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
